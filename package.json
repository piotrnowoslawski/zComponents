{
  "name": "zcomponents-ui",
  "version": "1.2.4",
  "description": "Customizable React dropdown component (TypeScript + SCSS Modules).",
  "author": "Piotr Nowos≈Çawski",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./react-hook-form": {
      "types": "./dist/react-hook-form.d.ts",
      "import": "./dist/react-hook-form.esm.js",
      "require": "./dist/react-hook-form.cjs.js"
    },
    "./styles.css": "./dist/zcomponents-ui.css"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/piotrnowoslawski/zComponents.git"
  },
  "bugs": {
    "url": "https://github.com/piotrnowoslawski/zComponents/issues"
  },
  "homepage": "https://piotrnowoslawski.github.io/zComponents",
  "keywords": [
    "react",
    "dropdown",
    "select",
    "typescript",
    "scss-modules",
    "zcomponents-ui",
    "zdrop"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "prepublishOnly": "npm run build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build -o storybook-static",
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy-storybook": "gh-pages -d storybook-static",
    "predeploy-storybook": "npm run build-storybook"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "react-hook-form": "^7.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.9",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@storybook/addon-onboarding": "^9.1.15",
    "@storybook/react-vite": "^9.1.15",
    "@types/node": "^20.19.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "react-hook-form": "^7.66.1",
    "rimraf": "^5.0.0",
    "rollup": "^4.52.5",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.93.2",
    "storybook": "^9.1.15",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.2"
  }
}
